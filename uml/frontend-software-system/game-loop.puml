@startuml
!include process-input-handler.puml
!include game-settings.puml
!include update-handler.puml
!include render-handler.puml

package "Game Loop" {
  class Game {
    -gameSettings : AGameSettings
    -inputVerifier : InputVerifier
    -updatePublisher : UpdatePublisher
    -renderPublisher : RenderPublisher

    -processInput() : void
    -update() : void
    -render() : void
    +run() : void
  }

  Game --> AGameSettings
  Game --> InputVerifier
  Game --> UpdatePublisher
  Game --> RenderPublisher
}
@enduml
